<?php
$terms = get_the_terms($post, 'post_tag');

if (!$terms) {
  return;
}

$terms = implode(', ', array_map(function ($term) {
  $link = get_term_link($term);
  return "<a class='text-gray-800 no-underline hover:text-primary-600 hover:underline' href='{$link}'>{$term->name}</a>";
}, $terms));
?>

<p>
  <?= __('Tags', 'theme'); ?>: <?= $terms; ?>
</p>
