{
  "name": "wordpress-starter",
  "description": "WordPress starter project for custom theme development",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@prettier/plugin-php": "*",
    "@tailwindcss/vite": "*",
    "prettier": "*",
    "tailwindcss": "*"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "dev": "vite",
    "format": "npx prettier . --write"
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-php"
    ],
    "singleQuote": true,
    "tabWidth": 2
  }
}
