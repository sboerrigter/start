{
  "name": "start",
  "description": "WordPress starter project for custom theme development",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.4",
    "@tailwindcss/vite": "^4.1.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3"
  },
  "scripts": {
    "start": "composer install && npm install && vite",
    "build": "vite build",
    "dev": "vite",
    "format": "npx prettier . --write"
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-php",
      "prettier-plugin-tailwindcss"
    ],
    "singleAttributePerLine": true,
    "singleQuote": true,
    "tabWidth": 2,
    "tailwindStylesheet": "./web/wp-content/themes/theme/styles/theme.css",
    "overrides": [
      {
        "files": "*.phtml",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
