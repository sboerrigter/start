{
  "name": "sboerrigter/wordpress-starter",
  "type": "project",
  "license": "MIT",
  "description": "WordPress starter project for custom theme development.",
  "homepage": "https://github.com/sboerrigter/wordpress-starter",
  "authors": [
    {
      "name": "Sjoerd Boerrigter",
      "email": "s.boerrigter@gmail.com",
      "homepage": "https://www.bonsjoerd.fr"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "composer",
      "url": "https://wp-languages.github.io"
    },
    {
      "type": "composer",
      "url": "https://connect.advancedcustomfields.com"
    }
  ],
  "require": {
    "composer/installers": "*",
    "oscarotero/env": "*",
    "php": ">=8.1",
    "roots/bedrock-autoloader": "*",
    "roots/wordpress": "*",
    "roots/wp-config": "*",
    "roots/wp-password-bcrypt": "*",
    "vlucas/phpdotenv": "*",
    "koodimonni-language/core-nl_nl": "*",
    "wpackagist-plugin/limit-login-attempts": "*",
    "wpackagist-plugin/seo-by-rank-math": "*",
    "wpackagist-plugin/varnish-http-purge": "*",
    "wpackagist-plugin/wp-mail-smtp": "*",
    "wpengine/advanced-custom-fields-pro": "*",
    "ramsey/uuid": "^4.7"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true,
      "koodimonni/composer-dropin-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "dropin-paths": {
      "web/wp-content/languages/": [
        "vendor:koodimonni-language"
      ],
      "web/wp-content/languages/plugins/": [
        "vendor:koodimonni-plugin-language"
      ],
      "web/wp-content/languages/themes/": [
        "vendor:koodimonni-theme-language"
      ]
    },
    "installer-paths": {
      "web/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "autoload": {
    "psr-4": {
      "Starter\\": "web/wp-content/themes/starter/src"
    }
  }
}
